	<bind name="move_x" type="joystick_axis" device="0" control="0" deadzone="0.1" scale="-1"/>
	<bind name="move_y" type="joystick_axis" device="0" control="1" deadzone="0.1" scale="-1"/>
	<bind name="aim_x" type="joystick_axis" device="0" control="2" deadzone="0.1"  scale="-1"/>
	<bind name="aim_y" type="joystick_axis" device="0" control="3" deadzone="0.1" scale="-1"/>
	<bind name="fire1" type="joystick_button" device="0" control="7" scale="1"/>
	<bind name="fire2" type="joystick_button" device="0" control="6" scale="1"/>

	<!-- mouse -->
	<bind name="menu_x" type="mouse_axis" device="0" control="0" scale="-1"/>
	<bind name="menu_y" type="mouse_axis" device="0" control="1" scale="-1"/>
	<bind name="click" type="mouse_button" device="0" control="1" scale="1"/>

