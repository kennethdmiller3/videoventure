<?xml version="1.0"?>
<template name="enemyshipburst" type="enemyshipturreted">
	<link name="turret">
		<weapon>
			<shot delay="2.0" />
			<action>
				<repeat count="10">
					<ordnance name="enemypulsebullet">
						<position x="0" y="4"/>
						<velocity x="0" y="180"/>
					</ordnance>
					<cue name="fire"/>
					<wait value="0.05"/>
				</repeat>
			</action>
		</weapon>
		<soundcue>
			<cue name="fire" sound="stargate-spaceguppyshot" />
		</soundcue>
	</link>
</template>
