	<beam damage="0" range="256" category="2" bit1="0" bit2="0" bit4="0" />
	<renderable radius="256">
		<quads>
			<color>
				<key time="0.0" r="0.0" g="0.0" b="1.0" a="0.0" />
				<key time="2.0" r="0.0" g="0.0" b="1.0" a="1.0" />
