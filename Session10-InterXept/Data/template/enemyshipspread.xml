<?xml version="1.0"?>
<template name="enemyshipspread" type="enemyshipturreted">
	<link name="turret">
		<weapon>
			<shot delay="2.0" />
			<action>
				<loop name="angle" from="-20" to="20" by="5">
					<ordnance name="enemypulsebullet">
						<position x="0" y="4">
							<angle>
								<angle/>
							</angle>
						</position>
						<velocity x="0" y="180"/>
					</ordnance>
				</loop>
				<cue name="fire"/>
			</action>
		</weapon>
		<soundcue>
			<cue name="fire" sound="stargate-landerfire" />
		</soundcue>
	</link>
</template>
